record(calc,"tpm_AZ1_Ampstat") {
	field(DESC, "AMP:AZ1 Amplifier Status")
        field(INPA, "tpm_IP470_A0")
	field(INPB, "tpm_IP470_A1")
	field(CALC, "(A<<4)+((B&240)>>4)")	
	field(SCAN, ".1 second")
}
